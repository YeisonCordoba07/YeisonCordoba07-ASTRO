<style>

    section {
        display: flex;
        gap: 20px;
        justify-content: center;
        width: 1024px;
        margin: auto;
        height: 700px;
        padding-top: 130px;
    }


    .profile {
        background-color: var(--info-profile-background);
        width: 60%;
        height: 100%;
        border-radius: var(--border-radius);
    }

    .profile__background {
        display: flex;
        flex-direction: column;
        padding: 30px;
        width: 100%;
        height: 100%;
        border-radius: var(--border-radius);
        gap: 40px;
        align-items: center;

        background: linear-gradient(
                45deg,
                rgba(64, 156, 255, 0.4),
                rgba(218, 143, 255, 0.6),
                rgba(255, 105, 97, 0.25),
                rgba(255, 179, 64, 0.3),
                rgba(255, 212, 0, 0.5)
        );
    }

    .profile__title-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .profile__title {
        font-weight: 900;
        font-size: 50px;
        font-family: var(--font-family);
        margin: 0;
        color: var(--info-profile-title-color);
    }

    .profile__subtitle {
        font-family: var(--font-family);
        font-size: 35px;
        font-weight: 500;
        color: var(--info-profile-subtitle-color);
        text-align: center;
    }

    .profile__text {
        font-family: var(--font-family);
        font-size: 25px;
        width: 90%;
        height: 100%;
        text-align: center;
        color: var(--info-profile-text-color);
    }

    .profile__button-container {
        display: flex;
        gap: 15px;
        align-items: center;
        flex-wrap: wrap;
        margin-top: auto;
        justify-content: center;
    }
    .profile__social-container{
        display: flex;
        gap: inherit;
    }

    .profile-image {
        display: flex;
        width: 40%;
        height: 100%;
        border-radius: var(--border-radius);
        background-color: #fff1f1;
    }

    .profile-image > div {
        display: flex;
        width: 100%;
        height: 100%;
        border-radius: var(--border-radius);

        background: linear-gradient(
                75deg,
                rgba(64, 156, 255, 0.2),
                rgba(218, 143, 255, 0.4),
                rgba(255, 105, 97, 0.3),
                rgba(255, 179, 64, 0.4),
                rgba(255, 212, 38, 0.7)
        );
        overflow: hidden;
    }

    .profile-image img {
        width: 100%;
        object-fit: cover;
    }


    /* ----------------- Responsive ------------------ */
    @media (max-width: 770px) {

        section {
            flex-direction: column;
            width: 100%;
            height: fit-content;
        }

        .profile {
            width: 100%;
        }
        .profile__background{
            align-items: center;
            gap: 50px;
        }
        .profile__title-container{
            align-items: center;
        }
        .profile__title{
            text-align: center;
        }
        .profile__text{
            text-align: center;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .profile-image {
            width: 100%;
            height: 300px;
        }

        .profile-image img {
            object-fit: contain;
        }
    }

    @media (min-width: 771px) and (max-width: 1023px) {

        section {
            width: 100%;
        }
        .profile__title{
            text-align: center;
        }
        .profile__text{
            margin-top: 0px;
        }
    }

    @media (min-width: 1024px) {
        section {
            height: 630px;
        }
    }


</style>